package com.runsystem.datnt.controllers;

import org.apache.log4j.Logger;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;

import com.runsystem.datnt.utils.LogginUtils;

@ControllerAdvice(basePackages = "com.runsystem.datnt.controllers")
public class ExceptionHandlerController {
	
	private Logger logger = LogginUtils.getInstance().getLogger(ExceptionHandlerController.class);
	
	@ExceptionHandler(Exception.class)
	public String processExceptionHandler(Model model, Exception ex) {
		
		model.addAttribute("error", ex);
		
		return "400";
	}

}
