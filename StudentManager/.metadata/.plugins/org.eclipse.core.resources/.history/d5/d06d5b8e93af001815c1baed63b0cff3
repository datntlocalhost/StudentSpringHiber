package com.runsystem.datnt.utils;

import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;

@Getter
@AllArgsConstructor
@NoArgsConstructor
public enum HeaderPackage {

	AUTH_REQUIREMENT("AUTH_REQUIREMENT", "Login required", "/login"),
	INPUT_INVALID("INPUT_INVALID", "Input invalid"),
	CREATE_SUCCESS("CREATE_SUCCESS", "Created successfully"),
	DELETE_SUCCESS("DELETE_SUCCESS", "Deleted successfully"),
	UPDATE_SUCCESS("UPDATE_SUCCESS", "Updated successfully"),
	CREATE_ERROR("CREATE_ERROR", "Create failed"),
	DELETE_ERROR("DELETE_ERROR", "Delete failed"),
	UPDATE_ERROR("UPDATE_ERROR", "Update failed");
	
	private String info;
	private String message;
	private String redirectURI;
	
	private HeaderPackage(String info) {
		this.info = info;
	}
	
	private HeaderPackage(String info, String message) {
		this.info = info;
		this.message = message;
	}
}
