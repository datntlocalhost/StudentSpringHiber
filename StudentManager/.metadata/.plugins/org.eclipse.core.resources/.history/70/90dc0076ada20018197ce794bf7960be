package com.runsystem.datnt.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.runsystem.datnt.entities.Records;
import com.runsystem.datnt.entities.School;
import com.runsystem.datnt.entities.Student;
import com.runsystem.datnt.entities.User;
import com.runsystem.datnt.services.interfaces.StudentService;
import com.runsystem.datnt.services.interfaces.UserService;

@Controller
public class TestController {
	
	@Autowired
	private StudentService userService;
	
	@RequestMapping(value = "/test", method = RequestMethod.GET)
	public String test() {
		
		Student student = new  Student();
		User user = new User();
		user.setPassword("123");
		
		School school = new School();
		school.setSchoolId(1);
		
		Records records = new Records();
		records.setBirthday("2018-01-01");
		records.setSex("Maile");
		
		student.setStudentName("Gia cat luong");
		student.setStartYear("2017-2018");
		student.setRecord(records);
		student.setSchool(school);
		student.setUser();
		
		System.out.println(userService.insert(student));
		
		return "login";
	}

}
