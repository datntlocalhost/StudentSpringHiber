<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="ERROR">
	
  <Properties>
  	<Property name="path" value="/home/datnguyen/logs" />
  	<Property name="pattern" value="[%p] %d{yyyy/MM/dd HH:mm:ss} %m%n"/>
  </Properties>

  <Appenders>
  	<!-- Appender for display log on console -->
    <Console name="log_console" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>
    
    <!-- Appender for log in file -->
	<RollingFile name="log_file" fileName="${path}/program.log" filePattern="${path}/Web_%d{yyyyMMdd}.log">
		<PatternLayout pattern="${pattern}"/>
		<Policies>
			<TimeBasedTriggeringPolicy interval="1" modulate="true" />
		</Policies>
		<DefaultRolloverStrategy max="1"/>
	</RollingFile>
	
	<!-- Appender for log to file of spring core -->
	<RollingFile name="" fileName="" filePattern="">
		<PatternLayout pattern="${pattern}"/>
		<Policies>
			<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
		</Policies>
		<DefaultRolloverStrategy max="1" />
	</RollingFile> 
    
  </Appenders>
  <Loggers>
  
    <Logger name="com.runsystem.datnt" level="info" additivity="false">
      <AppenderRef ref="log_console"/>
      <AppenderRef ref="log_file" />
    </Logger>
    
    
	
  </Loggers>
</Configuration>