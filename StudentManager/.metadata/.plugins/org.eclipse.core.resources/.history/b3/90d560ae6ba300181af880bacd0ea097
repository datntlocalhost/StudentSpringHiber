	@RequestMapping(value = "/admin/list", method = RequestMethod.GET)
	public String loadPage(Model model) {
		
		model.addAttribute("user", "Admin");
		model.addAttribute("role", "ADMIN");
		model.addAttribute("studentList", studentService.list());
		return "studentlist";
	}
	
