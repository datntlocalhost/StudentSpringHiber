package com.runsystem.datnt.controllers;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.runsystem.datnt.entities.User;
import com.runsystem.datnt.models.ChangePwdModel;
import com.runsystem.datnt.services.implementations.UserServiceImpl;
import com.runsystem.datnt.validations.ChangePwdValidator;

@Controller
public class ChangePwdController {

	@Autowired
	UserServiceImpl userService;
	
	@RequestMapping(value = "/student/changepwd", method = RequestMethod.GET)
	public String loadPage(Model model) {
		model.addAttribute("changePwdModel", new ChangePwdModel());
		return "changepwd.html";
	}
	
	/*
	 * Change password.
	 * 
	 * Get new password info from POST request, check validation info.
	 * Update new info password if info is valid.
	 * 
	 * @param changePwd
	 * @param bindingResult
	 * @param request
	 * 
	 * @return true if update success, else return false.
	 * */
	@RequestMapping(value = "/student/changepwd", method = RequestMethod.POST)
	public @ResponseBody boolean changePwd(@ModelAttribute ChangePwdModel changePwd, BindingResult bindingResult, HttpServletRequest request) {
		//Check input info
		ChangePwdValidator validator = new ChangePwdValidator();
		validator.validate(changePwd, bindingResult);
		
		if (bindingResult.hasErrors()) {
			return false;
		}
		
		HttpSession session = request.getSession();
		User user = (User) session.getAttribute("user");
		user.setPassword(changePwd.getCurrentPassword());
		
		return userService.changePassword(user, changePwd.getNewPassword());
	}
}
