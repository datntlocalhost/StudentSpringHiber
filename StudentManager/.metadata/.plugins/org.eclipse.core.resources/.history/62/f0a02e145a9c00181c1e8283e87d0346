package com.runsystem.datnt.aops;

import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;

@Aspect
public class CheckLoginAspect {
	
	//@Around("within(@org.springframework.stereotype.Controller *) && execution(* com.runsystem.datnt.controllers.SearchController.loadPage(..))")
	public void onCheck(ProceedingJoinPoint joinPoint) {
		
		Object[] args = joinPoint.getArgs();
		
		for (Object obj : args) {
			System.out.println(obj.getClass().getName());
		}
		
	}

}
