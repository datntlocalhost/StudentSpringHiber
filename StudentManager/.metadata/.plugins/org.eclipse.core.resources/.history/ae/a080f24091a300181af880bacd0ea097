package com.runsystem.datnt.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.ResponseBody;

import com.runsystem.datnt.models.UpdateModel;
import com.runsystem.datnt.services.interfaces.StudentService;

@Controller
public class DeleteController {

	@Autowired
	private StudentService studentService;
	
	public @ResponseBody boolean deleteStudent(@ModelAttribute UpdateModel info, BindingResult bindingResult) {
		Student student = studentService.delete(info.getStudentCode());
		return false;
	}
}
