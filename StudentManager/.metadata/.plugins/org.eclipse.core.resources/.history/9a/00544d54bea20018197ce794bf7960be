<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.runsystem.datnt.entities">

	<class name="Records" table="RECORDS">
		
		<id name="studentId" type="int" column="student_id">
			<generator class="foreign">
				<param name="property">student</param>
			</generator>
		</id>
		
		<one-to-one name="student" class="Student" constrained="true" lazy="false"/>
		
		<property name="sex"      type="string" column="records_sex" />
		<property name="birthday" type="string"   column="records_birthday" />
		<property name="phone"    type="string" column="records_phone" />
		<property name="email"    type="string" column="records_email" />
		<property name="address"  type="string" column="records_address" />
	</class>
	
	<sql-query name="selectRecordBySex">
		<return alias="records" class="Records" />
		<![CDATA[
			SELECT r.* FROM STUDENT as st, RECORDS as r WHERE st.student_id = r.student_id AND st.student_name like :sex
		]]>
	</sql-query>

</hibernate-mapping>