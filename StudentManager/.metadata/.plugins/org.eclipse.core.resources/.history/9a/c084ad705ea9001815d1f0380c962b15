package com.runsystem.datnt.models;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.List;

public class Pagenation implements Serializable {

	private static final long serialVersionUID = 1L;
	private int offset;
	private int numEntries;
	private int numPage;
	private int startPage;
	private int endPage;
	private int currentPage;
	private List<StudentListModel> students = new ArrayList<StudentListModel>();
	
	public Pagenation() {}

	public Pagenation(int offset, int numEntries, int numPage, int startPage, int endPage, int currentPage, List<StudentListModel> students) {
		super();
		this.offset = offset;
		this.numEntries = numEntries;
		this.numPage = numPage;
		this.startPage = startPage;
		this.endPage = endPage;
		this.currentPage = currentPage;
		this.students = students;
	}

	public int getNumPage() {
		return numPage;
	}

	public void setNumPage(int numPage) {
		this.numPage = numPage;
	}

	public int getStartPage() {
		return startPage;
	}

	public void setStartPage(int startPage) {
		this.startPage = startPage;
	}

	public int getEndPage() {
		return endPage;
	}

	public void setEndPage(int endPage) {
		this.endPage = endPage;
	}

	public int getCurrentPage() {
		return currentPage;
	}

	public void setCurrentPage(int currentPage) {
		this.currentPage = currentPage;
	}

	public int getNumEntries() {
		return numEntries;
	}

	public void setNumEntries(int numEntries) {
		this.numEntries = numEntries;
	}

	public List<StudentListModel> getStudents() {
		return students;
	}

	public void setStudents(List<StudentListModel> students) {
		this.students = students;
	}

	public int getOffset() {
		return offset;
	}

	public void setOffset(int offset) {
		this.offset = offset;
	}

	public static long getSerialversionuid() {
		return serialVersionUID;
	}
	
	public void setup(List<StudentListModel> list, int curPate, int offset) {
		this.numEntries = list.size();
		this.numPage = numEntries % offset == 0 ? numEntries / offset : numEntries / offset + 1;
		if (numPage >= 5) {
			this.startPage = 1;
		}
	}
}
