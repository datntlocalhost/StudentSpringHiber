package com.runsystem.datnt.controllers;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.runsystem.datnt.models.UpdateModel;
import com.runsystem.datnt.services.interfaces.StudentService;

@Controller
public class UpdateController {
	
	@Autowired
	private StudentService studentService;

	@RequestMapping(value = "/admin/update", method = RequestMethod.POST)
	public @ResponseBody UpdateModel updateStudent(@ModelAttribute UpdateModel updateInfo, BindingResult bindingResult) {
		if (studentService.updateStudent(updateInfo) != null) {
			return updateInfo;
		}
		return null;
	}
}
