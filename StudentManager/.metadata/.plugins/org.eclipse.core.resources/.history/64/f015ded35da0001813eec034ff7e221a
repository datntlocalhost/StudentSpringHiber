package com.runsystem.datnt.utils;

import java.text.SimpleDateFormat;
import java.util.Calendar;

public class GenerateStudentCode {
	
	/*
	 * Generate student code
	 * 
	 * @param index
	 * 
	 * @return code string
	 */
	public static String getCode(String code) {
		Calendar calendar = Calendar.getInstance();
		int nextCode = 0;
		
		//Format date, just get 2 last number of year string
		SimpleDateFormat format = new SimpleDateFormat("yy");
		String year = format.format(calendar.getTime());
		//formart int to string 
		String stringIndex = String.format("%06d", nextCode);
		
		return format.format(calendar.getTime()) + stringIndex;
	}
}
