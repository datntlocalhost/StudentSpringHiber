package com.runsystem.datnt.services.implementations;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.runsystem.datnt.daos.interfaces.UserDao;
import com.runsystem.datnt.entities.User;
import com.runsystem.datnt.services.interfaces.UserService;
import com.runsystem.datnt.utils.HashSHA1;

@Service
public class UserServiceImpl implements UserService {

	@Autowired
	UserDao userDao;
	
	public boolean insert(User user) {
		System.out.println(userDao != null);
		return false;
	}

	public boolean update(User user) {
		return false;
	}

	public boolean delete(Integer userId) {
		return false;
	}

	public User selectById(int userId) {
		return userDao.selectById(userId);
	}

	public User selectUser(User user) {
		//Hash user password with SHA1
		String hashPwd = HashSHA1.hashSHA1(user.getPassword());
		user.setPassword(hashPwd);
		
		return userDao.selectUser(user);
	}

	public List<User> selectAll() {
		return null;
	}
	
	public boolean changePassword(User user, String newPassword) {
		User hasUser = selectUser(user);
		
		if (hasUser != null) {
			newPassword = HashSHA1.hashSHA1(newPassword);
			hasUser.setPassword(newPassword);
			update(hasUser);
			return true;
		}
		return false;
	}

	public UserDao getUserDao() {
		return userDao;
	}

	public void setUserDao(UserDao userDao) {
		this.userDao = userDao;
	}
}
